<!-- flash-success -->
<% if (success && success.length) {%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%# role is used for accessilibity purpose %> <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- flash-error -->
<% if (error && error.length) {%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%# role is used for accessilibity purpose %> <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
